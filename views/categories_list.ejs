<%- include('top_page') %>
<h1><%= page_title %></h1>
<a href="/categories/Add">add category</a>
<table>
    <tr>
        <th>שם</th>
    </tr>
    <% for(let usr of categories){ %>
        <tr>
            <td><a href="/categories/Edit/<%= usr.id %>">edit</a></td>
            <td><%= usr.name %></td>
            <td>
                <form action="/categories/Delete" method="post">
                    <input type="hidden" name="id" value="<%= usr.id %>">
                    <button>מחיקה</button>
                </form>
            </td>
        </tr>
    <% } %>
    <tr>
        <td colspan="100" class="centered">
            <br/>
            <form action="" method="get">
                <% if(page > 0) { %>
                    <button name="p" value="<%= page-1 %>">הקודם</button>
                <% } %>
                עמוד <%= page+1 %> מתוך <%= total_pages+1 %>
                <% if(page < total_pages) { %>
                    <button name="p" value="<%= page+1 %>">הבא</button>
                <% } %>
            </form>
        </td>
    </tr>
</table>
<%- include('bottom_page') %>